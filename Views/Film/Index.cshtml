                    <li data-target="#bildeSlide" data-slide-to="2"></li>
                    <li data-target="#bildeSlide" data-slide-to="3"></li>
                </ol>

                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src='../@(Model[0].Filmer[0].Bilde)' alt="@(Model[0].Filmer[0].Navn)" class="img-responsive" />

                        <h3>@(Model[0].Filmer[0].Navn)</h3>
                        <p>@(Model[0].Filmer[0].Beskrivelse)</p>

                    </div>

                    <div class="item">
                        <img src='../@(Model[0].Filmer[5].Bilde)' alt="@(Model[0].Filmer[5].Navn)" class="img-responsive" />

                        <h3>@(Model[0].Filmer[5].Navn)</h3>
                        <p>@(Model[0].Filmer[5].Beskrivelse)</p>

                    </div>

                    <div class="item">
                        <img src='../@(Model[0].Filmer[3].Bilde)' alt="@(Model[0].Filmer[3].Navn)" class="img-responsive" />

                        <h3>@(Model[0].Filmer[3].Navn)</h3>
                        <p>@(Model[0].Filmer[3].Beskrivelse)</p>

                    </div>

                    <div class="item">
                        <img src='../@(Model[0].Filmer[7].Bilde)' alt="@(Model[0].Filmer[7].Navn)" class="img-responsive" />

                        <h3>@(Model[0].Filmer[7].Navn)</h3>
                        <p>@(Model[0].Filmer[7].Beskrivelse)</p>

                    </div>
                </div>

                <a class="left carousel-control" href="#bildeSlide" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Forrige</span>
                </a>
                <a class="right carousel-control" href="#bildeSlide" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Neste</span>
                </a>
            </div>
        </div>
        <div class="col-sm-4" style="color:#2e2e2e">
            <div class="well">
                <p><b>@(Model[0].Nyheter[0].Tittel)</b> &nbsp;&nbsp; <br /><i>@(Model[0].Nyheter[0].Dato)</i></p>
                <p>@(Model[0].Nyheter[0].Beskjed)</p>
            </div>
            <div class="well">
                <p><b>@(Model[0].Nyheter[1].Tittel)</b> &nbsp;&nbsp; <br /><i>@(Model[0].Nyheter[1].Dato)</i></p>
                <p>@(Model[0].Nyheter[1].Beskjed)</p>
            </div>
            <div class="well">
                <p><b>@(Model[0].Nyheter[2].Tittel)</b> &nbsp;&nbsp; <br /><i>@(Model[0].Nyheter[2].Dato)</i></p>
                <p>@(Model[0].Nyheter[2].Beskjed)</p>
            </div>
        </div>
    </div>
    <hr>
</div>

