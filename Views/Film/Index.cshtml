    <h3 id="scrollTarget">Se film når det passer deg!</h3>
    <br>
    <div class="row">
        <div class="col-sm-3">
            <img src='../@(Model[0].Filmer[1].Bilde)' alt="@(Model[0].Filmer[1].Navn)" class="img-responsive center" width="250" height="300" onclick="filmCollapse(@(Model[0].Filmer[1].id))"  style="cursor: pointer" />
