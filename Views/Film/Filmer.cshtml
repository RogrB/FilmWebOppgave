@model IEnumerable<Graubakken_Filmsjappe.Models.Film>

@{
    ViewBag.Title = "Filmer";
}

<div class="row">
    <div class="col-sm-6">
        <h2>Filmer</h2>
        <p>Sortert etter @ViewBag.Sortering</p>
    </div>
    <div class="col-sm-6 pull-right">
        <br />
        <div class="dropdown pull-right">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                Sorter Etter:
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Alfabetisk", "Filmer", new { sortering = "Alfabetisk" })</li>
                <li>@Html.ActionLink("Antall Visninger", "Filmer", new { sortering = "Visninger" })</li>
                <li>@Html.ActionLink("Opplastingsdato", "Filmer", new { sortering = "Dato" })</li>
                <li>@Html.ActionLink("Stjerner", "Filmer", new { sortering = "Stjerner" })</li>
                <li>@Html.ActionLink("Sjanger", "Filmer", new { sortering = "Sjanger" })</li>
                <li>@Html.ActionLink("Kontinent", "Filmer", new { sortering = "Kontinent" })</li>
                <li>@Html.ActionLink("Produksjonsår", "Filmer", new { sortering = "Produksjonsår" })</li>
            </ul>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Navn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produksjonsår)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kontinent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Studio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bilde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visninger)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beskrivelse)
        </th>
        <th>
            Opplastingsdato
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Navn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produksjonsår)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kontinent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bilde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visninger)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beskrivelse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
        </tr>
    }

</table>
