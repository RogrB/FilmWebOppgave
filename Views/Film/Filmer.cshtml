@model IEnumerable<Graubakken_Filmsjappe.Models.Film>

@{
    ViewBag.Title = "Filmer";
}

<h2>Filmer</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Navn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produksjonsår)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kontinent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sjanger1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sjanger2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Studio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bilde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visninger)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beskrivelse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Navn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produksjonsår)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kontinent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sjanger1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sjanger2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Studio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bilde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visninger)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beskrivelse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
    </tr>
}

</table>
